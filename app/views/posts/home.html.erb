<main id="posts-home">

	<div class="heads"><img src="https://lh3.googleusercontent.com/3u04U-eVgMVKq3_yPL3DGodeACYzLQKFugLuf41ZsZ9Yr0vpvWHAfIeQxv-rogFFjC0" width="40" style="border-radius: 10px">Group Links</div>

	<div class="deewar-posts">
		<div class="new-post-form">
			<% if user_signed_in? %>
			<%= form_for @post, remote: true do |f| %>
				<%= f.label :create_post %>
				<%= f.text_area :content %>

				<sub class="button"><%= f.submit %></sub>
			<% end %>
			<% end %>
		</div>

		<div >
			<ul id="posts-list" class="posts-list">
				<% @posts.reverse.each do |p| %>
				<!--  -->
					<%= render 'post', post: p %>
				<% end %>
			</ul>


		</div>
		

	</div>


	<div class="heads"><img src="https://cdn1.iconfinder.com/data/icons/rounded-black-basic-ui/139/Profile_GroupFriend-RoundedBlack-512.png" width="40">Friends</div>

</main>